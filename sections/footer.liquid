{% schema %}

{
    "name": "footer",
    "settings": [
        {
            "type": "header",
            "content": "Newsletter"
        },
        {
            "type": "color",
            "id": "bg_color",
            "label": "Background Color",
            "default": "#2D1A1A"
        },
        {
            "type": "header",
            "content": "Footer"
        },
        {
            "type": "link_list",
            "label": "Footer Menu",
            "id": "footer",
            "default": "footer"
        },
        {
            "type": "color",
            "id": "footer_bg_color",
            "label": "Background Color",
            "default": "#ffffff"
        },
        {
            "type": "color",
            "id": "footer_text_color",
            "label": "Text Color",
            "default": "#000000"
        },
        {
            "type": "text",
            "id": "footer_text",
            "label": "Footer Text",
            "default": "Â© 2023, All Rights Reserved"
        },
        {
            "type": "text",
            "id": "phone",
            "label": "Phone Number",
            "default": "+1 555 555 5555"
        },
        {
            "type": "text",
            "id": "email",
            "label": "Email",
            "default": "example@email.com"
        },
        {
            "type": "text",
            "id": "address",
            "label": "Address",
            "default": "1234 Street Name, City Name, Country Name"
        }
    ]
}

{% endschema %}

