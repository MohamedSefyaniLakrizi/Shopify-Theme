{% schema %}

{
    "name": "collection-list",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Browse our Collections"
        },
        {
            "type": "text",
            "id": "subtitle",
            "label": "Subtitle",
            "default": "Shop our collections of the best products we have to offer."
        }
    ],
    "blocks": [
        {
            "type": "collection-list",
            "name": "collection-list",
            "settings": [
                {
                    "type": "collection",
                    "id": "collection",
                    "label": "Collection"
                }
            ]
        }
    ]
}
{% endschema %}


<div class="flex flex-col items-center justify-center mb-5 mt-10 gap-1 mx-3 text-center">
    <h1 class="text-3xl font-bold"> {{section.settings.title}} </h1>
    <h3 class=" text-sm"> {{section.settings.subtitle}} </h3>
</div>
<div class="flex flex-wrap gap-3 align-middle items-center justify-center py-5">
{% for block in section.blocks %}
        <div class="relative shadow-lg mx-5 aspect-square w-[300px] lg:w-[500px] lg:mx-5">
            <a href="{{ block.settings.collection.url | url }}" class="product">
            <img class="aspect-square object-cover h-[300px] lg:h-[500px]" src="{{block.settings.collection.image | image_url: width: 500}}" /> 
            <h2 class="hover-upscale shadow-text-product shadow-text-product absolute bottom-6 left-3 drop-shadow-2xl text-white lg:text-xl lg:bottom-10 lg:left-6"> {{ block.settings.collection.title }} </h2>
            <div class="flex flex-row absolute bottom-2 left-3 align-middle lg:bottom-4 lg:left-6">
                <h3 class="shadow-text-product drop-shadow-lg text-white text-xs font-light lg:text-base"> Shop Now</h3>
                <svg class="shadow-text-product self-center ml-1 w-2 h-2 lg:w-4 lg:h-4" fill="#fff" viewBox="0 0 24 24" id="right-arrow" xmlns="http://www.w3.org/2000/svg" class="icon line"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path id="primary" d="M3,12H21m-3,3,3-3L18,9" style="fill: none; stroke: #fff; stroke-linecap: round; stroke-linejoin: round; stroke-width: 1.5;"></path></g></svg>
            </div>
            </a>
        </div>
{% endfor %}
</div>