let scrollListener = null;

scrollListener = () => {
    if (window.innerWidth < 1024) {
        return;
    }

    const head = document.querySelector('#navbar-default');

    if (window.scrollY > 100){
        head.classList.add('scrolled');
        head.classList.remove('bg-navbar-initial');
    } else { 
        head.classList.add('bg-navbar-initial');
        head.classList.remove('scrolled');
    }
};

window.addEventListener('DOMContentLoaded', (event) => {
    const head = document.querySelector('#navbar-default');

    if (window.location.pathname === "/") {
        document.addEventListener('scroll', scrollListener);
    } else {
        head.classList.add('scrolled');
        head.classList.remove('bg-navbar-initial');
        if (scrollListener) {
            document.removeEventListener('scroll', scrollListener);
        }
    }
});

const searchButton = document.querySelector('#search-button');
const searchForm = document.querySelector('#search-form');
const searchClose = document.querySelector('#search-close');
const searchCloseMobile = document.querySelector('#close-search-mobile');
const searchOpenMobile = document.querySelector('#open-search-mobile');

if (searchButton && searchForm) {
    searchButton.addEventListener('click', () => { 
        if (searchForm.classList.contains('hidden')) {
            searchForm.classList.remove('hidden');
            searchForm.classList.add('search-form-animation');
            searchForm.classList.remove('search-form-animation-out');
            searchCloseMobile.classList.toggle('hidden');
            searchOpenMobile.classList.toggle('hidden')
        } else {
            searchForm.classList.add('search-form-animation-out');
            searchForm.classList.remove('search-form-animation');
            searchCloseMobile.classList.toggle('hidden');
            searchOpenMobile.classList.toggle('hidden');
            searchForm.classList.add('hidden');
        }
        searchForm.classList.add('static'); 
    });
}

if (searchClose && searchForm) {
    searchClose.addEventListener('click', () => { 
        if (!searchForm.classList.contains('hidden')) {
            searchForm.classList.add('search-form-animation-out');
            setTimeout(() => {
                searchForm.classList.add('hidden');
            }, 500);
        } else {
            searchForm.classList.remove('hidden');
            searchForm.classList.add('search-form-animation');
            searchForm.classList.remove('search-form-animation-out');
        }
        searchForm.classList.remove('static');
    });
}

